                          <li data-target="#myCarousel" data-slide-to="3"></li>
                        </ol>

                        <div class="carousel-inner" role="listbox">

                          <div class="item active">
                            <img src="assets/baked_goods/nowrooz_cookies.jpg" class="image" alt="Cookies">
                            <div class="carousel-caption">
                              <h3 class="gal">Cookies</h3>
                              <p class="gal">Freshly Baked with Love.</p>
                            </div>
                          </div>
                          <div class="item">
                            <img src="assets/baked_goods/halloween_cupcakes.jpg" class="image" alt="Cupcake" >
                            <div class="carousel-caption">
                              <h3 class="gal">Cupcakes</h3>
                              <p class="gal">Fun and Decorative</p>
                            </div>
                          </div>
                          <div class="item">
                            <img src="assets/baked_goods/french_macaroons.jpg" class="image" alt="Flower">
                            <div class="carousel-caption">
                              <h3 class="gal">French Macaroons</h3>
                              <p class="gal">DÃ©licieux!</p>
                            </div>
                          </div>
                          <div class="item">
                            <img src="assets/baked_goods/cereal_bar.jpg" class="image" alt="Flower">
                            <div class="carousel-caption">
                              <h3 class="gal">Cereal Bar</h3>
                              <p class="gal">These will knock a bowl of plain cereal off the shelf</p>
                            </div>
                          </div>
                        </div>
                        <!-- Controller for Carousel -->
                        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                          <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                          <span class="sr-only">Next</span>
                        </a>
                      </div>
                    </div>
                </div>
