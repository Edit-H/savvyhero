<h1>This is the contact page</h1>


<h3>Please register for an account.</h3>

<% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
        <p><%= e %></p>
    <% end %>
<% end %>

<form action="/users" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div class="form-group">
        <p><label>Name <input type="text" name="user[first_name]" class="form-control"></label></p>
    </div>
    <div class="form-group">
        <p><label>Name <input type="text" name="user[last_name]" class="form-control"></label></p>
    </div>
    <div class="form-group">
        <p><label>Email <input type="text" name="user[email]" class="form-control"></label></p>
    </div>
    <div class="form-group">
        <p><label>Password <input type="password" name="user[password]" class="form-control"></label></p>
    </div>
    <div class="form-group">
        <p><label>Password Confirmation <input type="password" name="user[password_confirmation]" class="form-control"></label></p>
    </div>
        <p><input type="submit" class="btn btn-primary" value="Join"></p>
</form>
